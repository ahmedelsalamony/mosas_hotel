<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">



    <item android:drawable="@color/blue"/>
    <item>
        <bitmap android:src="@drawable/windsurfingimg" android:gravity="center" android:alpha="0.1"/>
    </item>
    <item android:top="-100dp"
        android:bottom="100dp"
        android:left="-100dp"
        android:right="0dp">
        <rotate
            android:fromDegrees="-10"
            android:pivotX="100%"
            android:pivotY="0%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="#fff"/>
            </shape>
        </rotate>

    </item>
</layer-list>